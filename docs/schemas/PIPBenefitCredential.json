{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://gov.uk/schemas/PIPBenefitCredential.json",
    "title": "PIP Benefit Credential Schema",
    "description": "JSON Schema for Personal Independence Payment Benefit Verifiable Credentials",
    "type": "object",
    "required": [
        "@context",
        "id",
        "type",
        "issuer",
        "issuanceDate",
        "credentialSubject"
    ],
    "properties": {
        "@context": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "id": {
            "type": "string",
            "format": "uri"
        },
        "type": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "allOf": [
                {
                    "contains": {
                        "const": "VerifiableCredential"
                    }
                },
                {
                    "contains": {
                        "const": "PIPBenefitCredential"
                    }
                }
            ]
        },
        "issuer": {
            "type": "string",
            "format": "uri",
            "pattern": "^did:web:"
        },
        "issuanceDate": {
            "type": "string",
            "format": "date-time"
        },
        "expirationDate": {
            "type": "string",
            "format": "date-time"
        },
        "credentialSubject": {
            "type": "object",
            "required": [
                "id",
                "benefitType",
                "amount",
                "assessmentDate"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uri",
                    "description": "WebID of the benefit recipient"
                },
                "benefitType": {
                    "type": "string",
                    "enum": [
                        "PIP",
                        "Personal Independence Payment"
                    ]
                },
                "amount": {
                    "type": "string",
                    "pattern": "^£[0-9]+\\.[0-9]{2}/week$",
                    "description": "Weekly benefit amount"
                },
                "totalWeeklyAmount": {
                    "type": "string",
                    "pattern": "^£[0-9]+\\.[0-9]{2}/week$",
                    "description": "Total weekly amount including all components"
                },
                "assessmentDate": {
                    "type": "string",
                    "format": "date"
                },
                "components": {
                    "type": "object",
                    "properties": {
                        "dailyLiving": {
                            "type": "string",
                            "enum": [
                                "None",
                                "Standard",
                                "Enhanced"
                            ]
                        },
                        "mobility": {
                            "type": "string",
                            "enum": [
                                "None",
                                "Standard",
                                "Enhanced"
                            ]
                        }
                    }
                },
                "nationalInsuranceNumber": {
                    "type": "string",
                    "pattern": "^[A-Z]{2}[0-9]{6}[A-Z]$"
                },
                "nextReviewDate": {
                    "type": "string",
                    "format": "date"
                }
            },
            "additionalProperties": false
        },
        "proof": {
            "type": "object",
            "required": [
                "type",
                "created",
                "proofPurpose",
                "verificationMethod",
                "jws"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "RsaSignature2018",
                        "Ed25519Signature2018"
                    ]
                },
                "created": {
                    "type": "string",
                    "format": "date-time"
                },
                "proofPurpose": {
                    "type": "string",
                    "enum": [
                        "assertionMethod"
                    ]
                },
                "verificationMethod": {
                    "type": "string",
                    "format": "uri"
                },
                "jws": {
                    "type": "string",
                    "description": "JSON Web Signature"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}